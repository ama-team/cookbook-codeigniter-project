server {
  listen 80;
  listen [::]:80;
  server_name <%= @domain %>;
  root <%= @document_root %>;
  error_log <%= @shared_files_directory %>/log/nginx.error.log;
  access_log <%= @shared_files_directory %>/log/nginx.access.log;
  index index.html index.php;

  location / {
    try_files $uri $uri/ /index.php?$args;
  }

  location ~ \.php$ {
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_pass <%= @fpm_pool_socket %>;
    include snippets/fastcgi-php.conf;
  }

  location ~/\. {
    deny all;
  }
}